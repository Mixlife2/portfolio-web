---
// src/components/ServiceCard.astro
const { title, description, priceRange } = Astro.props;
---

<article class="p-6 border rounded-lg shadow hover:shadow-lg transition cursor-pointer flex flex-col justify-between bg-white">
  <div>
    <h3 class="text-xl font-semibold mb-2 text-indigo-700">{title}</h3>
    <p class="text-gray-700 mb-4">{description}</p>
  </div>
  <div class="mt-auto">
    <p class="font-bold text-indigo-600">{priceRange}</p>
    <button class="mt-4 w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700 transition">
      Consultar
    </button>
  </div>
</article>
